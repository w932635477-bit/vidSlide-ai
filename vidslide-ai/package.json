{
  "name": "vidslide-ai",
  "version": "1.0.0",
  "description": "AI-powered video to PPT converter",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-constraints": "node scripts/constraint-checker.cjs",
    "constraint-report": "node scripts/constraint-metrics.js report",
    "constraint-reset": "node scripts/constraint-metrics.js reset",
    "dev-reminder": "node scripts/smart-reminder.js daily",
    "weekly-reminder": "node scripts/smart-reminder.js",
    "pre-commit": "npm run check-constraints"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@ffmpeg/core": "^0.12.6",
    "@ffmpeg/ffmpeg": "^0.12.6",
    "@ffmpeg/util": "^0.12.2",
    "@vueuse/core": "^10.7.0",
    "element-plus": "^2.4.4",
    "face-api.js": "^0.22.2",
    "lucide-vue-next": "^0.294.0",
    "pinia": "^2.1.7",
    "pptxgenjs": "^3.12.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^9.0.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
